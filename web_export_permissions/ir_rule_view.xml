<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>


        <!-- ir.rule -->

        <record id="view_rule_form_perm_export" model="ir.ui.view">
            <field name="name">ir.rule.form.perm.export</field>
            <field name="model">ir.rule</field>
            <field name="inherit_id" ref="base.view_rule_form"/>
            <field name="arch" type="xml">
                <field name="perm_unlink" position="after">
                    <field name="perm_export"/>
                </field>
            </field>
        </record>

        <record id="view_rule_tree_perm_export" model="ir.ui.view">
            <field name="name">ir.rule.tree.perm.export</field>
            <field name="model">ir.rule</field>
            <field name="inherit_id" ref="base.view_rule_tree"/>
            <field name="arch" type="xml">
                <field name="perm_unlink" position="after">
                    <field name="perm_export"/>
                </field>
            </field>
        </record>

        <record id="view_rule_search_perm_export" model="ir.ui.view">
            <field name="name">ir.rule.search.perm.export</field>
            <field name="model">ir.rule</field>
            <field name="inherit_id" ref="base.view_rule_search"/>
            <field name="arch" type="xml">
                <filter string="Delete Access Right" position="after">
                    <filter string="Export Access Right" domain="[('perm_export','=',True)]"/>
                </filter>
            </field>
        </record>



        <!-- ir.model.access -->

        <record id="ir_access_view_tree_perm_export" model="ir.ui.view">
            <field name="name">ir.model.access.tree.perm.export</field>
            <field name="model">ir.model.access</field>
            <field name="inherit_id" ref="base.ir_access_view_tree"/>
            <field name="arch" type="xml">
                <field name="perm_unlink" position="after">
                    <field name="perm_export"/>
                </field>
            </field>
        </record>

        <record id="ir_access_view_form_perm_export" model="ir.ui.view">
            <field name="name">ir.model.access.form.perm.export</field>
            <field name="model">ir.model.access</field>
            <field name="inherit_id" ref="base.ir_access_view_form"/>
            <field name="arch" type="xml">
                <field name="perm_unlink" position="after">
                    <field name="perm_export"/>
                </field>
            </field>
        </record>

        <record id="ir_access_view_search_perm_export" model="ir.ui.view">
            <field name="name">ir.model.access.search.perm.export</field>
            <field name="model">ir.model.access</field>
            <field name="inherit_id" ref="base.ir_access_view_search"/>
            <field name="arch" type="xml">
                <filter string="Write Access" position="after">
                    <filter string="Export Access" domain="[('perm_export','=',True)]"/>
                </filter>
            </field>
        </record>


    </data>
</openerp>
