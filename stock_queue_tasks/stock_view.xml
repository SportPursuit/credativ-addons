        <record id="view_picking_in_form_defer" model="ir.ui.view">
            <field name="name">stock.picking.in.form.defer</field>
            <field name="model">stock.picking.in</field>
            <field name="inherit_id" ref="stock.view_picking_in_form" />
            <field name="arch" type="xml">
                <!--Cancel Picking-->
                <xpath expr="//button[@name='button_cancel']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//button[@name='button_cancel']" position="after">
                    <button name="button_cancel_defer" states="assigned,confirmed,draft" type="object" string="Cancel Transfer" groups="base.group_user"/>
                </xpath>
