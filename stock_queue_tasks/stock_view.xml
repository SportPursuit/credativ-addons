<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="view_picking_form_defer" model="ir.ui.view">
            <field name="name">stock.picking.form.defer</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form" />
            <field name="arch" type="xml">
                <!--Cancel Picking-->
                <xpath expr="//button[@name='button_cancel']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//button[@name='button_cancel']" position="after">
                    <button name="button_cancel_defer" states="assigned,confirmed,draft" type="object" string="Cancel Transfer" groups="base.group_user"/>
                </xpath>
            </field>
        </record>

