        <record id="view_stock_invoice_onshipping_defer" model="ir.ui.view">
            <field name="name">Stock Invoice Onshipping Defer</field>
            <field name="model">stock.invoice.onshipping</field>
            <field name="inherit_id" ref="stock.view_stock_invoice_onshipping" />
            <field name="arch" type="xml">
                <xpath expr="//button[@name='open_invoice']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//button[@name='open_invoice']" position="before">
                    <button name="open_invoice_defer" string="Create" type="object" class="oe_highlight"/>
                </xpath>
